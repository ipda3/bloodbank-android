<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.fragment.donation.DonationDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donation_details_fragment_tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_blood_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_order_numbers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_hospital"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_hospital_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_sss"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@color/greydark" />

            <TextView
                android:id="@+id/donation_details_fragment_tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_xxl"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dim_m"
                android:paddingStart="@dimen/dim_m"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/donation_details_fragment_rl_details_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_note_txt"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@drawable/shape_edit_text_bg">

                <TextView
                    android:id="@+id/donation_details_fragment_tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_s"
                    android:layout_marginStart="@dimen/dim_m"
                    android:layout_marginTop="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    android:paddingStart="@dimen/dim_m"
                    android:text="@string/details"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/donation_details_fragment_tv_details_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/donation_details_fragment_tv_details"
                    android:layout_margin="@dimen/dim_s"
                    android:padding="@dimen/dim_s"
                    android:text="@string/notification"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/donation_details_fragment_mv_map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_note_txt"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m" />

            <Button
                android:id="@+id/donation_details_fragment_btn_calling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dimens_l"
                android:layout_marginStart="@dimen/dimens_l"
                android:layout_marginTop="@dimen/dim_m"
                android:background="@drawable/edit_green"
                android:drawableEnd="@drawable/callwhite"
                android:drawablePadding="@dimen/dim_s"
                android:paddingEnd="@dimen/dimens_store_image"
                android:paddingStart="@dimen/padding"
                android:text="@string/call"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_m"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>