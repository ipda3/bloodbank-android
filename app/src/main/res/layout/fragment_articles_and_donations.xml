<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.articlesAndRequests.ArticlesAndDonationsContainerFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabIndicatorColor="@color/move"
        app:tabSelectedTextColor="@color/white"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabTextColor="@color/black">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/Viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TabLayout">

    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:id="@+id/ArticlesAndRequests_Frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TabLayout" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ArticlesAndRequests_FloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimens_l"
        android:layout_marginStart="@dimen/dimens_l"
        android:src="@drawable/plus"
        app:backgroundTint="@color/green" />
</RelativeLayout>